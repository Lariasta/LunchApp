<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hfda.LunchApp.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDag"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOpening"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <ImageView
            android:contentDescription="Logo"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-20dp"
            app:srcCompat="@drawable/hsn" />

        <TextView
            android:id="@+id/tvLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="@string/lunchApp"
            android:layout_below="@id/imageView"
            android:layout_marginTop="-45dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvOpening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLunch"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/openingHours" />

    </RelativeLayout>

</FrameLayout>
